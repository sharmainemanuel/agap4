<?xml version='1.0' encoding='utf-8'?>
<widget id="com.agap2.net" version="1.2.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>PAGASA</name>
    <description>
        Official Mobile App of DOST PAGASA 
    </description>
    <author email="marcreytman@gmail.com" href="http://www.pagasa.dost.gov.ph/">
        GCCCS
    </author>

    <content src="index.html" />

    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="16" />
    
    <icon src="img/icon.png" />
    <icon gap:platform="android" gap:qualifier="ldpi" src="img/icon.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="img/icon.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="img/icon.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="img/icon.png" />
	
	<preference name="SplashScreen" value="screen" />
	<preference name="SplashScreenDelay" value="1000" />
	<splash src="splash/splash-mdpi" density="mdpi"/>
	<splash src="splash/splash-hdpi" density="hdpi"/>
	<splash src="splash/splash-xhdpi" density="xhdpi"/>
	
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" version="1" />
	
	<allow-navigation href="http://*/*" />
	<allow-navigation href="https://*/*" />
	<allow-navigation href="data:*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
	<plugin name="cordova-plugin-inappbrowser" spec="1.0.1" source="pgb" />
	
	<plugin name="com.simonmacdonald.telephonenumber" spec="1.0.0" source="pgb" />
	
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <platform name="winphone" />

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
